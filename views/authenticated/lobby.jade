doctype html
head
  title RiskAttack 2.0 Homepage
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='/css/HomepageStyle.css')

  include ./navbar.jade
  h2
    center#name Welcome to Central Command, #{username}
    p#playername.hacky #{username}

    
  body
