      input#creation-players-field.creation-field(type='text' name='name' placeholder='Enter a name')
      input#creation-submit(type='submit' value='Create Game')
    br
    
  div.bottomContianer
    div.half
        h2 Your Games
        div#gameBox.whitebox
          p#gameList
  
